# Portfolio Rotation Agent Configuration

# Azure OpenAI Configuration with GPT-5.2
# Required for RAG chatbot and market intelligence
# GPT-5.2 provides advanced reasoning and complex query handling
AZURE_OPENAI_API_KEY=your-azure-api-key
AZURE_OPENAI_ENDPOINT=https://your-resource-name.cognitiveservices.azure.com
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-5.2-chat
AZURE_OPENAI_EMBEDDING_DEPLOYMENT_NAME=text-embedding-ada-002
AZURE_OPENAI_API_VERSION=2024-12-01-preview
USE_LLM=false

# Market Data API Keys (optional, for enhanced features)
FINNHUB_API_KEY=your-finnhub-key

# Trading Parameters
INITIAL_CAPITAL=10000
ROTATION_THRESHOLD=0.02
STOP_LOSS_PCT=-15
MAX_DRAWDOWN_PCT=-30
MIN_CASH=10

# Agent Configuration
AGENT_MODE=analyze
CACHE_HOURS=1

# Logging
LOG_LEVEL=INFO

# Clerk Authentication (Multi-User Support)
CLERK_PUBLISHABLE_KEY=pk_test_your-publishable-key
CLERK_SECRET_KEY=sk_test_your-secret-key
