/* Professional Portfolio Manager Styles */

* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

:root {
  --primary: #0f7ae6;
  --bg-dark: #111a22;
  --surface-dark: #192634;
  --surface-darker: #151f2b;
  --border-dark: #233648;
  --text-primary: #ffffff;
  --text-secondary: #91adca;
  --text-muted: #d1dce5;
  --emerald: #10b981;
  --rose: #f43f5e;
  --yellow: #eab308;
}

body {
  font-family: 'Manrope', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  background: var(--bg-dark);
  color: var(--text-primary);
  overflow: hidden;
  height: 100vh;
}

.app {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* Header */
header {
  background: var(--bg-dark);
  padding: 0.75rem 1.5rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid var(--border-dark);
  flex-shrink: 0;
  z-index: 20;
  gap: 2rem;
}

.header-left {
  display: flex;
  align-items: center;
  gap: 0.75rem;
}

header h1 {
  font-size: 1.125rem;
  font-weight: 700;
  white-space: nowrap;
}

.logo-icon {
  width: 2rem;
  height: 2rem;
  background: rgba(15, 122, 230, 0.2);
  border-radius: 0.5rem;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--primary);
  flex-shrink: 0;
}

.header-nav {
  display: flex;
  gap: 0.5rem;
  flex: 1;
}

.header-nav a {
  padding: 0.5rem 1rem;
  border-radius: 0.5rem;
  color: var(--text-secondary);
  text-decoration: none;
  transition: all 0.2s;
  font-size: 0.9rem;
  font-weight: 500;
}

.header-nav a:hover {
  color: var(--text-primary);
  background: var(--surface-darker);
}

.header-nav a.active {
  color: var(--text-primary);
  background: var(--surface-dark);
}

.header-right {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.search-box {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  background: var(--surface-darker);
  padding: 0.5rem 1rem;
  border-radius: 0.5rem;
  border: 1px solid var(--border-dark);
  min-width: 200px;
}

.search-box input {
  background: transparent;
  border: none;
  outline: none;
  color: var(--text-primary);
  font-size: 0.875rem;
  width: 100%;
}

.search-box input::placeholder {
  color: var(--text-secondary);
}

.search-box .material-symbols-outlined {
  color: var(--text-secondary);
  font-size: 1.25rem;
}

.icon-btn {
  background: transparent;
  border: none;
  color: var(--text-secondary);
  cursor: pointer;
  padding: 0.5rem;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 0.375rem;
  transition: all 0.2s;
}

.icon-btn:hover {
  background: var(--surface-darker);
  color: var(--text-primary);
}

.icon-btn .material-symbols-outlined {
  font-size: 1.25rem;
}

/* Main */
main {
  flex: 1;
  padding: 1.5rem;
  max-width: 100%;
  width: 100%;
  margin: 0 auto;
  overflow-y: auto;
}

/* Welcome Screen */
.welcome {
  text-align: center;
  padding: 4rem 2rem;
  background: var(--surface-dark);
  border-radius: 1rem;
  border: 1px solid var(--border-dark);
  max-width: 600px;
  margin: 2rem auto;
}

.welcome h2 {
  font-size: 2rem;
  margin-bottom: 1rem;
  font-weight: 700;
}

.welcome p {
  font-size: 1.1rem;
  color: var(--text-secondary);
  margin-bottom: 2rem;
}

/* Buttons */
.btn-primary {
  background: var(--primary);
  color: white;
  border: none;
  padding: 0.75rem 1.5rem;
  font-size: 1rem;
  border-radius: 0.5rem;
  cursor: pointer;
  transition: all 0.2s;
  font-weight: 600;
}

.btn-primary:hover {
  background: #0d6bc7;
  transform: translateY(-1px);
}

.btn-primary:disabled {
  opacity: 0.5;
  cursor: not-allowed;
  transform: none;
}

.btn-secondary {
  background: var(--border-dark);
  color: var(--text-primary);
  border: 1px solid #324d67;
  padding: 0.5rem 1rem;
  font-size: 0.875rem;
  border-radius: 0.5rem;
  cursor: pointer;
  transition: all 0.2s;
  font-weight: 500;
}

.btn-secondary:hover {
  background: #324d67;
}

.btn-secondary:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

/* Stats Row */
.stats-row {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 1rem;
  margin-bottom: 1.5rem;
}

/* Dashboard Layout */
.dashboard-layout {
  display: grid;
  grid-template-columns: 1fr 320px;
  gap: 1.5rem;
  align-items: start;
}

.dashboard-main {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.dashboard-sidebar {
  position: sticky;
  top: 1.5rem;
}

/* Stats Grid (legacy) */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 1rem;
  margin-bottom: 1.5rem;
}

.stat-card {
  background: var(--surface-dark);
  padding: 1.25rem;
  border-radius: 0.75rem;
  border: 1px solid var(--border-dark);
  transition: border-color 0.2s;
}

.stat-card:hover {
  border-color: #324d67;
}

.stat-card label {
  display: block;
  font-size: 0.75rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  color: var(--text-secondary);
  margin-bottom: 0.5rem;
}

.stat-card .value {
  font-size: 1.5rem;
  font-weight: 700;
  line-height: 1.2;
}

.stat-card .value.positive {
  color: var(--emerald);
}

.stat-card .value.negative {
  color: var(--rose);
}

/* Keep legacy .stat for backward compatibility */
.stats {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 1rem;
  margin-bottom: 1.5rem;
}

.stat {
  background: var(--surface-dark);
  padding: 1.25rem;
  border-radius: 0.75rem;
  border: 1px solid var(--border-dark);
  transition: border-color 0.2s;
}

.stat:hover {
  border-color: #324d67;
}

.stat label {
  display: block;
  font-size: 0.75rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  color: var(--text-secondary);
  margin-bottom: 0.5rem;
}

.stat value {
  display: block;
  font-size: 1.5rem;
  font-weight: 700;
  line-height: 1.2;
}

.positive {
  color: var(--emerald);
}

.negative {
  color: var(--rose);
}

/* Card */
.card {
  background: var(--surface-dark);
  padding: 1.5rem;
  border-radius: 0.75rem;
  border: 1px solid var(--border-dark);
}

.card h2 {
  margin-bottom: 1.25rem;
  font-size: 1.125rem;
  font-weight: 700;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.card h2 .material-symbols-outlined {
  color: var(--primary);
  font-size: 1.25rem;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1.25rem;
}

.card-header h2 {
  margin-bottom: 0;
}

.card-actions {
  display: flex;
  gap: 0.75rem;
}

.card-actions .btn-primary,
.card-actions .btn-secondary {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.card-actions .material-symbols-outlined {
  font-size: 1.125rem;
}

/* Table */
table {
  width: 100%;
  border-collapse: collapse;
}

thead {
  background: #1e2d3d;
  position: sticky;
  top: 0;
}

th {
  padding: 0.875rem 1.25rem;
  text-align: left;
  font-weight: 700;
  font-size: 0.75rem;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  color: var(--text-secondary);
  border-bottom: 1px solid var(--border-dark);
}

th.text-right, td.text-right {
  text-align: right;
}

td {
  padding: 0.875rem 1.25rem;
  font-size: 0.875rem;
  border-bottom: 1px solid var(--border-dark);
  color: var(--text-muted);
}

tbody tr {
  transition: background-color 0.15s;
}

tbody tr:hover {
  background: var(--border-dark);
}

td strong {
  color: var(--text-primary);
  font-weight: 700;
}

td .positive {
  color: var(--emerald);
  font-weight: 700;
}

td .negative {
  color: var(--rose);
  font-weight: 700;
}

/* Badges */
.badge {
  display: inline-flex;
  align-items: center;
  padding: 0.25rem 0.625rem;
  border-radius: 0.375rem;
  font-size: 0.75rem;
  font-weight: 600;
}

.badge.success {
  background: rgba(16, 185, 129, 0.1);
  color: var(--emerald);
}

.badge.warning {
  background: rgba(234, 179, 8, 0.1);
  color: var(--yellow);
}

/* PRD Badges */
.prd-badges {
  display: flex;
  gap: 0.5rem;
  flex-wrap: wrap;
}

.badge-mom {
  background: rgba(59, 130, 246, 0.1);
  color: #60a5fa;
}

.badge-cat {
  background: rgba(168, 85, 247, 0.1);
  color: #c084fc;
}

.badge-up {
  background: rgba(16, 185, 129, 0.1);
  color: var(--emerald);
}

.badge-vol {
  background: rgba(59, 130, 246, 0.1);
  color: #60a5fa;
}

.badge-rsi {
  background: rgba(251, 146, 60, 0.1);
  color: #fb923c;
}

.ticker-subtitle {
  font-size: 0.75rem;
  color: var(--text-secondary);
  margin-top: 0.125rem;
}

.btn-analyze {
  background: var(--primary);
  color: white;
  border: none;
  padding: 0.375rem 0.875rem;
  font-size: 0.8125rem;
  border-radius: 0.375rem;
  cursor: pointer;
  transition: all 0.2s;
  font-weight: 600;
}

.btn-analyze:hover {
  background: #0d6bc7;
}

/* Message */
.message {
  padding: 1rem 1.5rem;
  border-radius: 0.5rem;
  margin-bottom: 1.5rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
  animation: slideDown 0.3s ease-out;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.message.success {
  background: rgba(16, 185, 129, 0.1);
  color: var(--emerald);
  border-left: 4px solid var(--emerald);
}

.message.error {
  background: rgba(244, 63, 94, 0.1);
  color: var(--rose);
  border-left: 4px solid var(--rose);
}

.message button {
  background: none;
  border: none;
  font-size: 1.5rem;
  cursor: pointer;
  color: inherit;
  opacity: 0.7;
  padding: 0 0.5rem;
}

.message button:hover {
  opacity: 1;
}

/* Empty State */
.empty {
  text-align: center;
  color: var(--text-secondary);
  padding: 3rem 2rem;
  font-size: 0.95rem;
}

/* Loading */
.loading {
  text-align: center;
  padding: 4rem;
  font-size: 1.1rem;
  color: var(--text-secondary);
}

/* Error */
.error {
  background: rgba(244, 63, 94, 0.1);
  color: var(--rose);
  padding: 1rem 1.5rem;
  border-radius: 0.5rem;
  margin: 1rem 0;
  border-left: 4px solid var(--rose);
}

/* Actions */
.actions {
  display: flex;
  gap: 1rem;
  justify-content: center;
  padding: 1rem 0;
}

/* Footer */
footer {
  background: var(--bg-dark);
  padding: 1rem;
  text-align: center;
  color: var(--text-secondary);
  font-size: 0.875rem;
  border-top: 1px solid var(--border-dark);
}

/* Material Icons */
.material-symbols-outlined {
  font-variation-settings:
    'FILL' 0,
    'wght' 400,
    'GRAD' 0,
    'opsz' 24;
}

/* Sidebar */
.sidebar-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1rem;
}

.sidebar-header h3 {
  font-size: 1rem;
  font-weight: 700;
}

.rotations-list {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.rotation-item {
  display: flex;
  gap: 0.75rem;
  padding: 0.875rem;
  background: var(--surface-darker);
  border-radius: 0.5rem;
  border: 1px solid var(--border-dark);
}

.rotation-icon {
  width: 2rem;
  height: 2rem;
  background: rgba(15, 122, 230, 0.1);
  border-radius: 0.375rem;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--primary);
  flex-shrink: 0;
}

.rotation-content {
  flex: 1;
  min-width: 0;
}

.rotation-time {
  font-size: 0.75rem;
  color: var(--text-secondary);
  margin-bottom: 0.25rem;
}

.rotation-trade {
  font-size: 0.875rem;
  font-weight: 600;
  margin-bottom: 0.375rem;
}

.rotation-reason {
  font-size: 0.75rem;
  color: var(--text-secondary);
  line-height: 1.3;
}

.rotation-status {
  font-size: 0.75rem;
  font-weight: 600;
  padding: 0.25rem 0.5rem;
  border-radius: 0.375rem;
  height: fit-content;
}

.rotation-status.success {
  background: rgba(16, 185, 129, 0.1);
  color: var(--emerald);
}

.rotation-status.rejected {
  background: rgba(244, 63, 94, 0.1);
  color: var(--rose);
}

/* Portfolio Assistant */
.portfolio-assistant {
  position: fixed;
  bottom: 1.5rem;
  right: 1.5rem;
  width: 380px;
  background: var(--surface-dark);
  border: 1px solid var(--border-dark);
  border-radius: 0.75rem;
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
  z-index: 100;
}

.assistant-header {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 1rem;
  border-bottom: 1px solid var(--border-dark);
}

.assistant-icon {
  width: 2.5rem;
  height: 2.5rem;
  background: rgba(15, 122, 230, 0.15);
  border-radius: 0.5rem;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--primary);
}

.assistant-info {
  flex: 1;
}

.assistant-title {
  font-size: 0.9375rem;
  font-weight: 700;
}

.assistant-status {
  display: flex;
  align-items: center;
  gap: 0.375rem;
  font-size: 0.8125rem;
  color: var(--text-secondary);
  margin-top: 0.125rem;
}

.status-dot {
  width: 6px;
  height: 6px;
  background: var(--emerald);
  border-radius: 50%;
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
}

.assistant-messages {
  padding: 1rem;
  max-height: 200px;
  overflow-y: auto;
}

.assistant-message {
  display: flex;
  gap: 0.75rem;
  margin-bottom: 1rem;
}

.assistant-message:last-child {
  margin-bottom: 0;
}

.message-icon {
  width: 1.75rem;
  height: 1.75rem;
  background: rgba(15, 122, 230, 0.1);
  border-radius: 0.375rem;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--primary);
  flex-shrink: 0;
}

.message-icon .material-symbols-outlined {
  font-size: 1rem;
}

.message-content {
  flex: 1;
  font-size: 0.875rem;
  line-height: 1.5;
}

.message-meta {
  display: flex;
  gap: 0.5rem;
  margin-top: 0.5rem;
}

.assistant-input {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 1rem;
  border-top: 1px solid var(--border-dark);
}

.assistant-input input {
  flex: 1;
  background: var(--surface-darker);
  border: 1px solid var(--border-dark);
  color: var(--text-primary);
  padding: 0.625rem 0.875rem;
  border-radius: 0.5rem;
  font-size: 0.875rem;
  outline: none;
}

.assistant-input input::placeholder {
  color: var(--text-secondary);
}

.assistant-input input:focus {
  border-color: var(--primary);
}

/* Modal */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 2rem;
}

.modal-content {
  background: var(--surface-dark);
  border: 1px solid var(--border-dark);
  border-radius: 0.875rem;
  max-width: 600px;
  width: 100%;
  max-height: 90vh;
  display: flex;
  flex-direction: column;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
}

.modal-content.large {
  max-width: 900px;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1.5rem;
  border-bottom: 1px solid var(--border-dark);
}

.modal-header h2 {
  font-size: 1.25rem;
  font-weight: 700;
  margin: 0;
}

.modal-body {
  flex: 1;
  overflow-y: auto;
  padding: 1.5rem;
}

.modal-footer {
  padding: 1rem 1.5rem;
  border-top: 1px solid var(--border-dark);
  display: flex;
  justify-content: flex-end;
  gap: 0.75rem;
}

/* Analysis Sections */
.analysis-section {
  margin-bottom: 2rem;
}

.analysis-section:last-child {
  margin-bottom: 0;
}

.analysis-section h3 {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-size: 1rem;
  font-weight: 700;
  margin-bottom: 1rem;
  color: var(--text-primary);
}

.analysis-section h3 .material-symbols-outlined {
  color: var(--primary);
  font-size: 1.25rem;
}

.empty-small {
  color: var(--text-secondary);
  font-size: 0.875rem;
  text-align: center;
  padding: 1rem;
}

/* Analyst Ratings */
.analyst-ratings {
  background: var(--surface-darker);
  padding: 1.25rem;
  border-radius: 0.5rem;
  border: 1px solid var(--border-dark);
}

.ratings-summary {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.rating-bar {
  height: 2rem;
  background: var(--bg-dark);
  border-radius: 0.5rem;
  overflow: hidden;
  display: flex;
}

.rating-segment {
  height: 100%;
  transition: width 0.3s ease;
}

.rating-segment.buy {
  background: var(--emerald);
}

.rating-segment.hold {
  background: var(--yellow);
}

.rating-segment.sell {
  background: var(--rose);
}

.rating-labels {
  display: flex;
  gap: 0.75rem;
  flex-wrap: wrap;
}

.rating-item {
  font-size: 0.875rem;
}

.consensus {
  font-size: 0.9375rem;
  color: var(--text-secondary);
}

/* Price Statistics */
.price-stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 1rem;
}

.stat-box {
  background: var(--surface-darker);
  padding: 1.25rem;
  border-radius: 0.5rem;
  border: 1px solid var(--border-dark);
}

.stat-box label {
  display: block;
  font-size: 0.75rem;
  color: var(--text-secondary);
  margin-bottom: 0.5rem;
  text-transform: uppercase;
  font-weight: 600;
}

.stat-box .value {
  font-size: 1.5rem;
  font-weight: 700;
  margin-bottom: 0.25rem;
}

.stat-box .date {
  font-size: 0.8125rem;
  color: var(--text-secondary);
}

/* Price Catalysts */
.catalysts-list {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.catalyst-item {
  display: flex;
  align-items: center;
  gap: 1rem;
  background: var(--surface-darker);
  padding: 1rem;
  border-radius: 0.5rem;
  border: 1px solid var(--border-dark);
  transition: border-color 0.2s;
}

.catalyst-item:hover {
  border-color: var(--primary);
}

.catalyst-item.positive {
  border-left: 3px solid var(--emerald);
}

.catalyst-item.negative {
  border-left: 3px solid var(--rose);
}

.catalyst-icon {
  width: 2.5rem;
  height: 2.5rem;
  background: rgba(15, 122, 230, 0.1);
  border-radius: 0.5rem;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--primary);
  flex-shrink: 0;
}

.catalyst-content {
  flex: 1;
  min-width: 0;
}

.catalyst-type {
  margin-bottom: 0.375rem;
}

.badge-positive {
  background: rgba(16, 185, 129, 0.1);
  color: var(--emerald);
}

.badge-negative {
  background: rgba(244, 63, 94, 0.1);
  color: var(--rose);
}

.badge-neutral {
  background: rgba(91, 109, 120, 0.1);
  color: var(--text-secondary);
}

.catalyst-description {
  font-size: 0.9375rem;
  font-weight: 600;
  margin-bottom: 0.375rem;
  line-height: 1.4;
}

.catalyst-date {
  font-size: 0.75rem;
  color: var(--text-secondary);
}

.catalyst-impact {
  flex-shrink: 0;
}

.catalyst-impact.positive .material-symbols-outlined {
  color: var(--emerald);
  font-size: 1.5rem;
}

.catalyst-impact.negative .material-symbols-outlined {
  color: var(--rose);
  font-size: 1.5rem;
}

.catalyst-impact.neutral .material-symbols-outlined {
  color: var(--text-secondary);
  font-size: 1.5rem;
}

/* Price Targets */
.price-targets {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 1rem;
}

.price-item {
  background: var(--surface-darker);
  padding: 1rem;
  border-radius: 0.5rem;
  border: 1px solid var(--border-dark);
  text-align: center;
}

.price-item label {
  display: block;
  font-size: 0.75rem;
  color: var(--text-secondary);
  margin-bottom: 0.5rem;
  text-transform: uppercase;
  font-weight: 600;
}

.price-item .value {
  font-size: 1.5rem;
  font-weight: 700;
}

/* Earnings */
.earnings-data {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 1rem;
}

.earnings-item {
  background: var(--surface-darker);
  padding: 1rem;
  border-radius: 0.5rem;
  border: 1px solid var(--border-dark);
  text-align: center;
}

.earnings-item label {
  display: block;
  font-size: 0.75rem;
  color: var(--text-secondary);
  margin-bottom: 0.5rem;
  text-transform: uppercase;
  font-weight: 600;
}

.earnings-item div {
  font-size: 1.125rem;
  font-weight: 600;
}

/* News & Sentiment */
.sentiment-indicator {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  margin-bottom: 1rem;
  padding: 0.875rem;
  background: var(--surface-darker);
  border-radius: 0.5rem;
  border: 1px solid var(--border-dark);
}

.sentiment-indicator label {
  font-weight: 600;
  font-size: 0.9375rem;
}

.sentiment-badge {
  padding: 0.375rem 0.75rem;
  border-radius: 0.375rem;
  font-size: 0.875rem;
  font-weight: 600;
}

.sentiment-badge.positive {
  background: rgba(16, 185, 129, 0.1);
  color: var(--emerald);
}

.sentiment-badge.negative {
  background: rgba(244, 63, 94, 0.1);
  color: var(--rose);
}

.news-list {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.news-item {
  background: var(--surface-darker);
  padding: 1rem;
  border-radius: 0.5rem;
  border: 1px solid var(--border-dark);
  transition: border-color 0.2s;
}

.news-item:hover {
  border-color: var(--primary);
}

.news-source {
  font-size: 0.75rem;
  color: var(--text-secondary);
  margin-bottom: 0.375rem;
  font-weight: 600;
}

.news-headline {
  font-size: 0.9375rem;
  font-weight: 600;
  margin-bottom: 0.375rem;
  line-height: 1.4;
}

.news-date {
  font-size: 0.75rem;
  color: var(--text-secondary);
}

/* Risk Metrics */
.risk-metrics {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.risk-item {
  background: var(--surface-darker);
  padding: 1rem;
  border-radius: 0.5rem;
  border: 1px solid var(--border-dark);
}

.risk-item label {
  display: block;
  font-size: 0.875rem;
  font-weight: 600;
  margin-bottom: 0.5rem;
}

.risk-bar {
  height: 0.5rem;
  background: var(--bg-dark);
  border-radius: 0.25rem;
  overflow: hidden;
  margin-bottom: 0.5rem;
}

.risk-fill {
  height: 100%;
  border-radius: 0.25rem;
  transition: width 0.3s ease;
}

.risk-fill.low {
  background: var(--emerald);
}

.risk-fill.medium {
  background: var(--yellow);
}

.risk-fill.high {
  background: var(--rose);
}

.risk-label {
  font-size: 0.8125rem;
  color: var(--text-secondary);
}

/* Politician Trades */
.politician-trades-list {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.politician-trade-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: var(--surface-darker);
  padding: 1rem;
  border-radius: 0.5rem;
  border: 1px solid var(--border-dark);
  transition: border-color 0.2s;
}

.politician-trade-item:hover {
  border-color: var(--primary);
}

.trade-politician {
  flex: 1;
}

.politician-name {
  font-size: 0.9375rem;
  font-weight: 600;
  margin-bottom: 0.375rem;
}

.politician-info {
  display: flex;
  gap: 0.5rem;
}

.party-badge,
.chamber-badge {
  font-size: 0.75rem;
  padding: 0.25rem 0.5rem;
  border-radius: 0.25rem;
  font-weight: 600;
}

.party-badge {
  background: rgba(59, 130, 246, 0.1);
  color: #60a5fa;
}

.chamber-badge {
  background: rgba(168, 85, 247, 0.1);
  color: #c084fc;
}

.trade-details {
  text-align: right;
}

.trade-type {
  font-size: 0.875rem;
  font-weight: 700;
  margin-bottom: 0.25rem;
}

.trade-type.buy {
  color: var(--emerald);
}

.trade-type.sell {
  color: var(--rose);
}

.trade-amount {
  font-size: 0.875rem;
  color: var(--text-primary);
  margin-bottom: 0.25rem;
}

.trade-date {
  font-size: 0.75rem;
  color: var(--text-secondary);
}

/* Chart Styles */
.chart-container {
  background: var(--surface-darker);
  border-radius: 0.5rem;
  padding: 1rem;
  border: 1px solid var(--border-dark);
}

.chart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1rem;
}

.chart-info {
  display: flex;
  align-items: baseline;
  gap: 1rem;
}

.chart-price {
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--text-primary);
}

.chart-change {
  font-size: 0.9375rem;
  font-weight: 600;
}

.chart-change.positive {
  color: var(--emerald);
}

.chart-change.negative {
  color: var(--rose);
}

.timeframe-selector {
  display: flex;
  gap: 0.375rem;
  background: var(--surface-dark);
  padding: 0.25rem;
  border-radius: 0.5rem;
}

.timeframe-btn {
  padding: 0.375rem 0.875rem;
  background: transparent;
  border: none;
  color: var(--text-secondary);
  font-size: 0.8125rem;
  font-weight: 600;
  border-radius: 0.375rem;
  cursor: pointer;
  transition: all 0.2s;
}

.timeframe-btn:hover {
  background: var(--surface-darker);
  color: var(--text-primary);
}

.timeframe-btn.active {
  background: var(--primary);
  color: white;
}

.price-chart-svg {
  width: 100%;
  height: 300px;
  display: block;
}

.chart-loading,
.chart-error {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 300px;
  color: var(--text-secondary);
  font-size: 0.9375rem;
}

.volume-bars {
  display: flex;
  align-items: flex-end;
  gap: 1px;
  height: 60px;
  margin-top: 0.5rem;
  background: var(--surface-dark);
  border-radius: 0.25rem;
  padding: 0.25rem;
}

.volume-bar {
  flex: 1;
  min-width: 2px;
  border-radius: 2px 2px 0 0;
  transition: opacity 0.2s;
}

.volume-bar:hover {
  opacity: 0.8;
}

/* Responsive */
@media (max-width: 1200px) {
  .dashboard-layout {
    grid-template-columns: 1fr;
  }

  .dashboard-sidebar {
    position: static;
  }

  .portfolio-assistant {
    width: 320px;
  }
}

@media (max-width: 768px) {
  .stats-row {
    grid-template-columns: repeat(2, 1fr);
  }

  .stats-grid {
    grid-template-columns: 1fr;
  }

  .stats {
    grid-template-columns: 1fr;
  }

  main {
    padding: 1rem;
  }

  .card {
    padding: 1rem;
  }

  th, td {
    padding: 0.5rem 0.75rem;
    font-size: 0.8125rem;
  }

  .header-nav {
    display: none;
  }

  .search-box {
    display: none;
  }

  .portfolio-assistant {
    width: calc(100vw - 2rem);
    left: 1rem;
    right: 1rem;
  }
}
