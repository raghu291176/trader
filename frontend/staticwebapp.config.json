{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/assets/*", "/favicon.ico", "/api/*"]
  },
  "responseOverrides": {
    "404": {
      "rewrite": "/index.html"
    }
  },
  "globalHeaders": {
    "content-security-policy": "default-src 'self' 'unsafe-inline' 'unsafe-eval' https: data: blob:; img-src 'self' data: https:; font-src 'self' data: https:;"
  },
  "mimeTypes": {
    ".json": "application/json",
    ".js": "text/javascript",
    ".css": "text/css"
  },
  "auth": {
    "identityProviders": {
      "customOpenIdConnectProviders": {
        "clerk": {
          "registration": {
            "clientIdSettingName": "CLERK_PUBLISHABLE_KEY",
            "clientCredential": {
              "clientSecretSettingName": "CLERK_SECRET_KEY"
            },
            "openIdConnectConfiguration": {
              "wellKnownOpenIdConfiguration": "https://YOUR_CLERK_FRONTEND_API/.well-known/openid-configuration"
            }
          },
          "login": {
            "nameClaimType": "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name"
          }
        }
      }
    }
  }
}
